[user]
        email = --
        name = Alexandre Duverger
[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
        ui = auto

[color "branch"]
        current = green
        remote = yellow

[core]
        pager = less -FMRiX
        excludesfile = $HOME/.config/git/excludes
        editor = code --wait

[push]
        default = simple

[pull]
        rebase = true

[alias]
        co = checkout
        st = status -sb
        br = branch
        ci = commit
        fo = fetch origin
        d = !git --no-pager diff
        m = checkout main
        dt  = difftool
        stat = !git --no-pager diff --stat
        dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
        unstage = reset HEAD --

[help]
        autocorrect = 1

[init]
        defaultBranch = mainline
